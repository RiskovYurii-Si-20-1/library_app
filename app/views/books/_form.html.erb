<%= form_with model: @book do |f| %>

  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, required: true, class: 'form-control'%>
  </div>
  <div class="mb-3">
    <%= f.label :author, class: 'form-label' %>
    <%= f.text_field :author, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :genre_id, class: 'form-label' %>
    <%= collection_select(:book, :genre_id, Genre.all, :id, :name, {}, { :multiple => false, :class => 'form-control' }) %>
  </div>
  <div class="mb-3">
    <%= f.label :publication_year, class: 'form-label' %>
    <%= f.text_field :publication_year, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :image_url, class: 'form-label' %>
    <%= f.text_field :image_url, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= button_to "Accept", books_path, method: :get, class: "btn btn-outline-secondary mb-3" %>
  </div>
<% end %>
