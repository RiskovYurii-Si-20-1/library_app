<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
  <span class="fs-2 text-center">Online Library panel</span>
  <hr>
  <% if current_user%>
    <div class="align-self-end text-end mx-3">
      <span class="fs-3 text-center">User options</span>
      <ul class="nav nav-pills flex-column mb-auto">
        <li>
          <%= link_to "Bookmarks", user_bookmarks_path(current_user), class: "btn btn-small btn-outline-secondary my-2" %>
        </li>
      </ul>
    </div>
    <% if current_user.admin%>
      <div class="align-self-end text-end mx-3">
        <span class="fs-3 text-center">Admin options</span>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <%= link_to "Create new Book", new_book_path, class: "btn btn-small btn-outline-secondary my-2" %>
          </li>
          <li>
            <%= link_to "Genres", genres_path, class: "btn btn-small btn-outline-secondary my-2" %>
          </li>
        </ul>
      </div>
    <% end %>
  <% else %>
    <div class="container-fluid">
      <div class="d-flex align-content-center text-center">
        <p>Please Login for More functionality</p>
      </div>
    </div>
  <% end %>
<hr>
<div class="container-fluid ">
  <ul class="nav-pills ">
    <% if current_user%>
      <div class="fs-5">
        <%= current_user.email %>
      </div>
      <div class="row">
        <div class="container text-center">
          <%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-small btn-outline-secondary my-2" %>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-small btn-outline-danger my-2" %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="container text-center">
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-small btn-outline-primary my-2" %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-small btn-outline-success my-2" %>
        </div>
      </div>
    <% end %>
  </ul>
</div>
</div>